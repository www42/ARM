{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "automationAccountName": {
           "type": "string"
        },
        "location": {
           "type": "string",
           "defaultValue": "[resourceGroup().location]"
        }
    },
    "functions": [],
    "variables": {
        "dscModules": {
            "xActiveDirectory": {
                "name": "xActiveDirectory",
                "uri": "https://devopsgallerystorage.blob.core.windows.net/packages/xactivedirectory.3.0.0.nupkg"
            },
            "ActiveDirectoryDsc": {
                "name": "ActiveDirectoryDsc",
                "uri": "https://psg-prod-eastus.azureedge.net/packages/activedirectorydsc.6.0.1.nupkg"
            }
        },
        "dscConfigurations": {
            "WebServerConfig": {
                "name": "WebserverConfig",
                "description": "Webserver IIS DSC configuration",
                "uri": "https://raw.githubusercontent.com/www42/arm/master/dscConfigs/WebserverConfig.ps1"
            },
            "DomainControllerConfig": {
                "name": "DomainControllerConfig",
                "description": "Domain Controller DSC configuration contoso.com",
                "uri": "https://raw.githubusercontent.com/www42/arm/master/dscConfigs/DomainControllerConfig.ps1"
            }
        }
    },
    "resources": [
        {
            "name": "[parameters('automationAccountName')]",
            "type": "Microsoft.Automation/automationAccounts",
            "apiVersion": "2015-10-31",
            "location": "[parameters('location')]",
            "tags": {},
            "properties": {
                "sku": {
                    "name": "Free"
                }
            },
            "resources": [
                {
                    "name": "[variables('dscConfigurations').WebServerConfig.name]",
                    "type": "configurations",
                    "apiVersion": "2015-10-31",
                    "location": "[parameters('location')]",
                    "tags": {},
                    "dependsOn": [
                        "[parameters('automationAccountName')]"
                    ],
                    "properties": {
                        "description": "[variables('dscConfigurations').WebServerConfig.description]",
                        "source": {
                            "type": "uri",
                            "value": "[variables('dscConfigurations').WebServerConfig.uri]"
                        },
                        "state": "Published",
                        "overwrite": true,
                        "logProgress": true,
                        "logVerbose": false,
                        "parameters": {}
                    }
                },
                {
                    "name": "[variables('dscConfigurations').DomainControllerConfig.name]",
                    "type": "configurations",
                    "apiVersion": "2015-10-31",
                    "location": "[parameters('location')]",
                    "tags": {},
                    "dependsOn": [
                        "[parameters('automationAccountName')]"
                    ],
                    "properties": {
                        "description": "[variables('dscConfigurations').DomainControllerConfig.description]",
                        "source": {
                            "type": "uri",
                            "value": "[variables('dscConfigurations').DomainControllerConfig.uri]"
                        },
                        "state": "Published",
                        "overwrite": true,
                        "logProgress": true,
                        "logVerbose": false,
                        "parameters": {}                        
                    }
                },
                {
                    "name": "WebserverConfigCompile",
                    "type": "compilationjobs",
                    "apiVersion": "2018-01-15",
                    "dependsOn": [
                        "[parameters('automationAccountName')]",
                        "[variables('dscConfigurations').WebServerConfig.name]"
                    ],
                    "properties": {
                        "configuration": {
                            "name": "[variables('dscConfigurations').WebServerConfig.name]"
                        },
                        "parameters": {}
                    }
                },
                {
                    "name": "DomainControllerConfigCompile",
                    "type": "compilationjobs",
                    "apiVersion": "2018-01-15",
                    "dependsOn": [
                        "[parameters('automationAccountName')]",
                        "[variables('dscConfigurations').DomainControllerConfig.name]"
                    ],
                    "properties": {
                        "configuration": {
                            "name": "[variables('dscConfigurations').DomainControllerConfig.name]"
                        },
                        "parameters": {}
                    }
                },
                {
                    "name": "[variables('dscModules').xActiveDirectory.name]",
                    "type": "modules",
                    "apiVersion": "2015-10-31",
                    "location": "[parameters('location')]",
                    "dependsOn": [
                        "[parameters('automationAccountName')]"
                    ],
                    "properties": {
                        "contentLink": {
                            "uri":"[variables('dscModules').xActiveDirectory.uri]"
                        }
                    }
                },
                {
                    "name": "[variables('dscModules').ActiveDirectoryDsc.name]",
                    "type": "modules",
                    "apiVersion": "2015-10-31",
                    "location": "[parameters('location')]",
                    "dependsOn": [
                        "[parameters('automationAccountName')]"
                    ],
                    "properties": {
                        "contentLink": {
                            "uri": "[variables('dscModules').ActiveDirectoryDsc.uri]"
                        }
                    }
                }
            ]
        }
    ],
    "outputs": {}
}