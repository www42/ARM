{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "automationAccountName": {
           "type": "string",
           "defaultValue": "PS61-AutomationAccount"
        }
    },
    "functions": [],
    "variables": {
        "location": "[resourceGroup().location]",
        "configurationName": "TestConfig",
        "configurationUri": "https://raw.githubusercontent.com/www42/arm/master/templates/TestConfig.ps1",
        "dscResources": {
            "nx": {
                "name": "nx",
                "url": "https://devopsgallerystorage.blob.core.windows.net/packages/nx.1.0.0.nupkg"
            }
        }
    },
    "resources": [
        {
            "name": "[parameters('automationAccountName')]",
            "type": "Microsoft.Automation/automationAccounts",
            "apiVersion": "2015-10-31",
            "location": "[variables('location')]",
            "tags": {},
            "properties": {
                "sku": {
                    "name": "Free"
                }
            },
            "resources": [
                {
                    "name": "[variables('configurationName')]",
                    "type": "configurations",
                    "apiVersion": "2015-10-31",
                    "location": "[variables('location')]",
                    "tags": {},
                    "dependsOn": [
                        "[parameters('automationAccountName')]"
                    ],
                    "properties": {
                        "description": "My IIS configuration",
                        "source": {
                            "type": "uri",
                            "value": "[variables('configurationUri')]"
                        },
                        "state": "Published",
                        "overwrite": true,
                        "logProgress": true,
                        "logVerbose": false,
                        "parameters": {}
                    }
                },
                {
                    "name": "TestConfigCompile",
                    "type": "compilationjobs",
                    "apiVersion": "2018-01-15",
                    "tags": {},
                    "dependsOn": [
                        "[parameters('automationAccountName')]",
                        "[variables('configurationName')]"
                    ],
                    "properties": {
                        "configuration": {
                            "name": "[variables('configurationName')]"
                        },
                        "parameters": {}
                    }
                },
                {
                    "name": "[variables('dscResources').nx.name]",
                    "type": "modules",
                    "apiVersion": "2015-10-31",
                    "location": "[variables('location')]",
                    "dependsOn": [
                        "[parameters('automationAccountName')]"
                    ],
                    "properties": {
                        "contentLink": {
                            "uri":"[variables('dscResources').nx.url]"
                        }
                    }
                }
            ]
        }
    ],
    "outputs": {}
}