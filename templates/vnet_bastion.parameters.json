{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vnetName": {
            "value": "Vnet1"
        },
        "vnetAddressSpace": {
            "value": "10.0.0.0/16"
        },
        "subnetName": {
            "value": "Subnet0"
        },
        "subnetAddressPrefix": {
            "value": "10.0.0.0/24"
        },
        "bastionHostName": {
            "value": "[concat(parameters('vnetName'),'-Bastion')]"
        },
        "bastionSubnetAddressPrefix": {
            "value": "10.0.255.32/27"
        },
        "location": {
            "value": "[resourceGroup().location]"
        }
    }
}