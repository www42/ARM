{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vmSize": {
           "type": "string",
           "metadata": {
                "description": "Size for all VMs."
            },
            "defaultValue": "Standard_F2s_v2"
        }
    },
    "variables": {
        "location": "[resourceGroup().location]",
        "vnetName": "Vnet",
        "vnetAddressSpace": "10.0.0.0/16",
        "subnetName": "servers",
        "subnetAddressPrefix": "10.0.0.0/24",
        "bastionHostName": "Bastion",
        "bastionHostIpAddressName": "[concat(variables('bastionHostName'), '-Ip')]",
        "bastionSubnetName": "AzureBastionSubnet",
        "bastionSubnetAddressPrefix": "10.0.255.32/27",
        "dcVmName": "DC",
        "dcVmIp": "10.0.0.200",
        "dcVmNetworkInterfaceName": "[concat(variables('dcVmName'), '-Nic')]",
        "dcVmOsDiskName": "[concat(variables('dcVmName'), '-Disk')]",
        "dcVmComputerName": "[variables('dcVmName')]",
        "adminUserName": "Student",
        "adminPassword": "Pa55w.rd1234"
    },
    "resources": [
        {
            "type": "Microsoft.Network/virtualNetworks",
            "name": "[variables('vnetName')]",
            "apiVersion": "2019-11-01",
            "location": "[variables('location')]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[variables('vnetAddressSpace')]"
                    ]
                },
                "dhcpOptions": {
                    "dnsServers": [
                        "[variables('dcVmIp')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[variables('subnetName')]",
                        "properties": {
                            "addressPrefix": "[variables('subnetAddressPrefix')]"
                        }
                    },
                    {
                        "name": "[variables('bastionSubnetName')]",
                        "properties": {
                            "addressPrefix": "[variables('bastionSubnetAddressPrefix')]"
                        }
                    }
                ]
            },
            "tags": {
                "seminar": "ps-61"
            }            
        },
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "[variables('bastionHostIpAddressName')]",
            "apiVersion": "2019-02-01",
            "location": "[variables('location')]",
            "sku": {
                "name": "Standard"
            },
            "properties": {
                "publicIPAllocationMethod": "Static"
            },
            "tags": {
                "seminar": "ps-61"
            }
        },
        {
            "type": "Microsoft.Network/bastionHosts",
            "apiVersion": "2019-11-01",
            "name": "[variables('bastionHostName')]",
            "location": "[variables('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/publicIpAddresses', variables('bastionHostIpAddressName'))]",
                "[resourceId('Microsoft.Network/virtualNetworks', variables('vnetName'))]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "IpConf",
                        "properties": {
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIpAddresses', variables('bastionHostIpAddressName'))]"
                            },
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('vnetName'), variables('bastionSubnetName'))]"
                            }
                        }
                    }
                ]
            },
            "tags": {
                "seminar": "ps-61"
            }
        },
        {
            "name": "[variables('dcVmName')]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2019-07-01",
            "location": "[variables('location')]",
            "tags": {
                "seminar": "ps-61"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces', variables('dcVmNetworkInterfaceName'))]"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('vmSize')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2019-Datacenter",
                        "version": "latest"
                    },
                    "osDisk": {
                        "name": "[variables('dcVmOsDiskName')]",
                        "caching": "ReadWrite",
                        "createOption": "FromImage"
                    }
                },
                "osProfile": {
                    "computerName": "[variables('dcVmComputerName')]",
                    "adminUsername": "[variables('adminUserName')]",
                    "adminPassword": "[variables('adminPassword')]"
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('dcVmNetworkInterfaceName'))]"
                        }
                    ]
                }
            }
        },
        {
           "name": "[variables('dcVmNetworkInterfaceName')]",
           "type": "Microsoft.Network/networkInterfaces",
           "apiVersion": "2019-11-01",
           "location": "[variables('location')]",
           "dependsOn": [
               "[resourceId('Microsoft.Network/virtualNetworks', variables('vnetName'))]"
           ],
           "tags": {
               "seminar": "ps-61"
           },
           "properties": {
               "ipConfigurations": [
                   {
                       "name": "ipConfig1",
                       "properties": {
                           "privateIPAllocationMethod": "Static",
                           "privateIPAddress": "[variables('dcVmIp')]",
                           "subnet": {
                               "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('vnetName'), variables('subnetName'))]"
                           }
                       }
                   }
               ]
           }
        }
   ],
    "outputs": {},
    "functions": []
}